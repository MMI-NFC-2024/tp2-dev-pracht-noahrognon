---
import Layout from "../layouts/Layout.astro";
import GraphicSpecies from "../components/GraphicSpecies.astro";
---

<Layout>
  <style>
    nav {
      margin-bottom: 1em;
    }
    .slider {
      display: flex;
      overflow-x: auto;
      scroll-behavior: smooth;
      gap: 2em;
      padding-bottom: 1em;
      scroll-snap-type: x mandatory;
    }
    .slide {
      min-width: 350px;
      flex: 0 0 80vw;
      scroll-snap-align: start;
      border: 1px solid #ccc;
      border-radius: 8px;
      background: #f9f9f9;
      padding: 1em;
    }
    @media (max-width: 600px) {
      .slide { min-width: 90vw; }
    }
  </style>

  <nav>
    <a href="#adelie">Adelie</a> |
    <a href="#gentoo">Gentoo</a> |
    <a href="#chinstrap">Chinstrap</a>
  </nav>
  <div class="slider">
    <section class="slide" id="adelie">
      <h2>Adelie</h2>
      <GraphicSpecies species="Adelie" />
    </section>
    <section class="slide" id="gentoo">
      <h2>Gentoo</h2>
      <GraphicSpecies species="Gentoo" />
    </section>
    <section class="slide" id="chinstrap">
      <h2>Chinstrap</h2>
      <GraphicSpecies species="Chinstrap" />
    </section>
  </div>
</Layout>

