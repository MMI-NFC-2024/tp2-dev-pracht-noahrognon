---
import PlotFigure from "../components/PlotFigure.astro";
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
---

<Layout>
  <nav class="mb-6 flex flex-wrap items-center gap-2">
    <a class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1.5 text-slate-700 shadow-sm hover:bg-slate-100 hover:text-slate-900" href="/species/Adelie">Adelie</a>
    <a class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1.5 text-slate-700 shadow-sm hover:bg-slate-100 hover:text-slate-900" href="/species/Gentoo">Gentoo</a>
    <a class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1.5 text-slate-700 shadow-sm hover:bg-slate-100 hover:text-slate-900" href="/species/Chinstrap">Chinstrap</a>
    <span class="mx-2 text-slate-300">|</span>
    <a class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1.5 text-slate-700 shadow-sm hover:bg-slate-100 hover:text-slate-900" href="/test-iframe">Iframe</a>
    <a class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1.5 text-slate-700 shadow-sm hover:bg-slate-100 hover:text-slate-900" href="/slider">Slider</a>
  </nav>
  <h1 class="text-3xl font-bold text-slate-900">Test Astro et Plot (Observablehq)</h1>
  <p class="mt-2 text-slate-600">Nuage de points global des trois esp√®ces.</p>
  <div class="mt-4 rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
  <PlotFigure
    options={{
      marks: [
        Plot.dot(penguins, {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",  
        }),
      ],
    }}
  />
  </div>
</Layout>   
