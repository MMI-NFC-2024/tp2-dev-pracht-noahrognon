---
import PlotFigure from "../components/PlotFigure.astro";
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
---

<Layout>
  <h1 class="text-4xl font-bold tracking-tight text-slate-900">Penguins Explorer</h1>
  <p class="mt-2 text-slate-600">Visualisez et comparez les mesures des manchots Adelie, Gentoo et Chinstrap.</p>
  <div class="mt-5 flex flex-wrap gap-3">
    <a class="inline-flex items-center gap-2 rounded-lg bg-indigo-600 px-4 py-2 font-medium text-white shadow hover:bg-indigo-500" href="/species/Adelie">Explorer les esp√®ces</a>
    <a class="inline-flex items-center gap-2 rounded-lg bg-slate-900 px-4 py-2 font-medium text-white shadow hover:bg-slate-800" href="/slider">Voir le slider</a>
    <a class="inline-flex items-center gap-2 rounded-lg bg-white px-4 py-2 font-medium text-slate-800 shadow ring-1 ring-slate-200 hover:bg-slate-50" href="/test-iframe">Ouvrir en iframe</a>
  </div>
  <h2 class="mt-8 text-xl font-semibold text-slate-800">Graphique global</h2>
  <div class="mt-4 rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
  <PlotFigure
    options={{
      marks: [
        Plot.dot(penguins, {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",  
        }),
      ],
    }}
  />
  </div>
</Layout>   
